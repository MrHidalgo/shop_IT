//- HEAD
mixin headSite(titleName, styleFile, arrFontName)
    head
        //- META TAGS
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        //- TITLE
        title!= titleName

        //- LINK CSS
        - for(var i = 0, styleFileLength = styleFile.length; i < styleFileLength; i++)
            link(href="style/" + styleFile[i], rel="stylesheet")

        //- LINK FONTS
        - for(var j = 0, arrFontNameLength = arrFontName.length; j < arrFontNameLength; j++)
            link(href= arrFontName[j], rel='stylesheet')

        //- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        //- WARNING: Respond.js doesn't work if you view the page via file://
        <!--[if lt IE 9]>
        script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
        <![endif]-->