<div class="forms-row">

    <div class="wrap-select">
        <p class="select__title">{{ inputTitle }}</p>

        <div class="input input-select year">
            <span class="input-select__value"></span>

            <select name="" id="">
                {% for i in 1..5 %}
                    <option value="">{{ i }}</option>
                {% endfor %}
            </select>

            <i class="input-select__icon"></i>
        </div>

        <div class="input input-select month">
            <span class="input-select__value"></span>

            <select name="" id="">
                {% for i in 1..5 %}
                    <option value="">{{ i }}</option>
                {% endfor %}
            </select>

            <i class="input-select__icon"></i>
        </div>

        <div class="input input-select date">
            <span class="input-select__value"></span>

            <select name="" id="">
                {% for i in 1..5 %}
                    <option value="">{{ i }}</option>
                {% endfor %}
            </select>

            <i class="input-select__icon"></i>
        </div>
    </div>

    <span class="info-m">{{ infoText }}</span>

    <span class="error-m">{{ errorText }}</span>
</div>